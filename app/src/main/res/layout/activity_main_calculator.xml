<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorOnBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="10sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_key"
                    android:backgroundTint="?tickColor"
                    android:gravity="bottom|end"
                    android:padding="10sp"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_place_holder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_key"
                    android:backgroundTint="?colorError"
                    android:gravity="bottom|end"
                    android:padding="10sp"
                    android:textColor="?colorOnBackground"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:layout_marginVertical="5sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginVertical="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number_seven"
                        android:layout_width="0sp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?tickColor"
                        android:gravity="center"
                        android:text="@string/seven"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/number_eight"
                        android:layout_width="0sp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?trackColor"
                        android:gravity="center"
                        android:text="@string/eight"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/number_nine"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?tickColor"
                        android:gravity="center"
                        android:text="@string/nine"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/delete"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?colorError"
                        android:padding="15sp"
                        app:srcCompat="@drawable/ic_delete"
                        app:tint="?colorOnBackground" />

                    <TextView
                        android:id="@+id/clear"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?colorError"
                        android:gravity="center"
                        android:text="@string/clear"
                        android:textColor="?colorOnBackground"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginVertical="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number_four"
                        android:layout_width="0sp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?trackColor"
                        android:gravity="center"
                        android:text="@string/four"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/number_five"
                        android:layout_width="0sp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?tickColor"
                        android:gravity="center"
                        android:text="@string/five"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/number_six"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?trackColor"
                        android:gravity="center"
                        android:text="@string/six"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/multiply"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?colorError"
                        android:gravity="center"
                        android:text="@string/multiply"
                        android:textColor="?colorOnBackground"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/divide"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?colorError"
                        android:gravity="center"
                        android:text="@string/divide"
                        android:textColor="?colorOnBackground"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginVertical="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number_one"
                        android:layout_width="0sp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?tickColor"
                        android:gravity="center"
                        android:text="@string/one"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/number_two"
                        android:layout_width="0sp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?trackColor"
                        android:gravity="center"
                        android:text="@string/two"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/number_three"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?tickColor"
                        android:gravity="center"
                        android:text="@string/three"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/plus"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?colorError"
                        android:padding="12dp"
                        app:srcCompat="@drawable/ic_plus"
                        app:tint="?colorOnBackground" />

                    <ImageView
                        android:id="@+id/minus"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?colorError"
                        android:padding="12dp"
                        app:srcCompat="@drawable/ic_minus"
                        app:tint="?colorOnBackground" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginVertical="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number_zero"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?tickColor"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/dot"
                        android:layout_width="0sp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?colorError"
                        android:gravity="center"
                        android:text="@string/dot"
                        android:textColor="?colorOnBackground"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/equals"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5sp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_key"
                        android:backgroundTint="?colorError"
                        android:gravity="center"
                        android:text="@string/equals"
                        android:textColor="?colorOnBackground"
                        android:textSize="44sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>